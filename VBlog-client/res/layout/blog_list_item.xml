<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blog_list_item_bg_selector"
        android:duplicateParentState="true"
        android:padding="10dp" >

        <TextView
            android:id="@+id/item_blog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_blog_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_blog_title"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/item_blog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_blog_category_name"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>