<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:background="@drawable/drawer_list_item_bg"
    android:paddingLeft="16dp" 
    android:paddingRight="16dp" 
    android:paddingTop="7dp" 
    android:paddingBottom="7dp" >

    <ImageView
        android:id="@+id/header_user_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/header_user_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/header_user_portrait"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@drawable/drawer_list_item_text"
        android:textSize="18sp" />

</RelativeLayout>